@model IEnumerable<Academy.DataLayer.Entities.Course.CourseGroup>
@{
    Layout = null;
}



    <div class="main-menu">
        <div class="container">
            <nav>
                <span class="responsive-sign"><i class="zmdi zmdi-menu"></i></span>
                <ul>
                    @foreach (var group in Model.Where(g => g.ParentId == null))
                    {
                        <li>
                            <a href="/Course?selectedGroups=@group.GroupId"> @group.GroupTitle </a>

                            @if (Model.Any(m => m.ParentId == group.GroupId))
                            {
                                <ul>
                                    @foreach (var subGroup in Model.Where(s => s.ParentId == group.GroupId))
                                    {
                                        <li><a href="/Course?selectedGroups=@subGroup.GroupId"> @subGroup.GroupTitle </a></li>
                                    }
                                </ul>
                            }

                        </li>
                    }

                </ul>
            </nav>
        </div>
    </div>

