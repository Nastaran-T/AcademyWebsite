@page "{id}"
@model Academy.Web.Pages.Admin.manageCourses.CreateEpisodeModel
@{
    ViewData["Title"] = "ایجاد بخش جدید";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن بخش جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="CourseEpisode.CourseId"/>
        <div class="col-lg-12">
            @*<div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات دوره
                </div>*@

            @*<div class="panel-body">*@
            <div class="form-group">
                <label>عنوان بخش</label>
                <input type="text" asp-for="CourseEpisode.EpisodeTitle" class="form-control">
                <span asp-validation-for="CourseEpisode.EpisodeTitle"></span>
            </div>

            <div class="form-group">
                <label>زمان بخش</label>
                <input type="text" asp-for="CourseEpisode.EpisodeTime" class="form-control">
                <span asp-validation-for="CourseEpisode.EpisodeTime"></span>
            </div>

            <div class="form-group">
                <label>فایل بخش</label>
                <input type="file" name="fileEpisode">
                <p class="text-warning">انتخاب فایل الزامی است</p>
                @if (ViewData["IsExist"] != null)
                {
                    <div class="alert alert-danger">نام فایل معتبر نیست،لطفا تغییر دهید</div>
                }
                <span asp-validation-for="CourseEpisode.EpisodeFileName"></span>
            </div>

            <div class="form-group">
                <label>دسترسی</label>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" asp-for="CourseEpisode.IsFree">
                        رایگان است
                    </label>
                </div>
                <input type="submit" value="ذخیره اطلاعات" class="btn btn-outline btn-primary btn-sm" />
            </div>

        </div>  
    </form>
</div>

@*</div>*@








