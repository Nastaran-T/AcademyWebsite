@page
@model Academy.Web.Pages.Admin.manageCourses.IndexModel
@{
    ViewData["Title"] = "لیست دوره ها";
}

<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست دوره ها
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                        <div class="col-md-12" style="margin:10px 0px;">

                            <a asp-page="CreateCourse" class="btn btn-outline btn-primary">افزودن دوره جدید</a>

                        </div>

                        <!--table-->

                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>تصویر</th>
                                    <th>عنوان دوره</th>
                                    <th>تعداد جلسه</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.showCourses)
                                {
                                    <tr>
                                        <td>
                                            <img src="/Course/thumb/@item.ImageName" class="thumbnail"/>
                                        </td>
                                        <td>
                                            @item.Title
                                        </td>
                                        <td>
                                            @item.EpisodeCount
                                        </td>
                                        <td>
                                            <a href="/Admin/manageCourses/EditCourse/@item.CourseId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                            <a href="/Admin/manageCourses/IndexEpisode/@item.CourseId" class="btn btn-warning btn-sm">
                                                نمایش بخش ها
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

            </div>
        </div>
    </div>
</div>
</div>