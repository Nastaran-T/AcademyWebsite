@page
@model Academy.Web.Pages.Admin.manageRoles.IndexModel
@{
    ViewData["Title"] = "لیست نقش ها";
}

<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست نقش کاربران 
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                       

                        <div class="col-md-12" style="margin:10px 0px;">

                            <a asp-page="CreateRole" class="btn btn-outline btn-primary">افزودن نقش جدید</a>

                        </div>

                        

                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام نقش</th>
                                   
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.Roles)
                                {
                                    <tr class="gradeU odd">
                                        <td>@item.RoleTitle</td>
                                      
                                        <td>
                                            <a href="/Admin/manageRoles/EditRole/@item.RoleID" class="btn btn-warning btn-sm">ویرایش</a>
                                            <a href="/Admin/manageRoles/DeleteRole/@item.RoleID" class="btn btn-danger btn-sm">حذف</a>
                                        </td>
                                    </tr>
                                }



                            </tbody>
                        </table>
                        
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>

            </div>
        </div>
    </div>
</div>
