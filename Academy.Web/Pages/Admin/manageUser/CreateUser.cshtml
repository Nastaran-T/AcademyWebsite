@page
@model Academy.Web.Pages.Admin.manageUser.CreateUserModel
@using Academy.DataLayer.Entities.User
@{
    ViewData["Title"] = "CreateUser";
    List<Role> roles = ViewData["Roles"] as List<Role>;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن کاربر جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form  method="post" enctype="multipart/form-data">
        <div class="col-lg-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات کاربر
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>نام کاربری</label>
                        <input type="text" asp-for="createUserViewModel.UserName" class="form-control">
                    </div>



                    <div class="form-group">
                        <label>ایمیل</label>
                        <input type="email" asp-for="createUserViewModel.Email" class="form-control">
                    </div>


                    <div class="form-group">
                        <label>کلمه عبور</label>
                        <input type="text" asp-for="createUserViewModel.Password" class="form-control">
                    </div>
                    
                        <input type="submit"  value="ذخیره اطلاعات" class="btn btn-outline btn-primary btn-sm"/>
                    
                </div>

            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    تصویر پروفایل
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4">
                            <img id="imgAvatar" src="~/AvatorUser/Default.png" class="thumbnail" width="100" />
                        </div>
                        <div class="col-md-8 form-group">
                            <label>انتخاب تصویر</label>
                            <input type="file" asp-for="createUserViewModel.UserAvatar">
                        </div>


                    </div>

                    <hr />
                    <div class="form-group">
                        <label>انتخاب نقش کاربر</label>
                        @foreach (var item in roles)
                        {
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="SelectedRoles" value="@item.RoleID">@item.RoleTitle
                                </label>
                            </div>
                        }
                    </div>

                </div>



            </div>
        </div>
    </form>

</div>

@section Scripts {
    <script src="~/js/MyJs1.js"></script>
 
}

